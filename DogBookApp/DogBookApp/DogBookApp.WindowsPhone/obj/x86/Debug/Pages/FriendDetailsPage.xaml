<Page
    x:Class="DogBookApp.Pages.FriendDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DogBookApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          DataContext="{Binding Message}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:ConnectionId='1' x:Name="BackButton"
            Grid.Row="0"
            Grid.Column="1"
                                    
            Style="{StaticResource NavigationBackButtonNormalStyle}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="10"/>
        <TextBlock
            Style="{StaticResource PageHeaderStyle}"
            Text="{StaticResource FriendProfilePageTitle}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="34"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"/>
        <Image Grid.Row="1"
               Grid.Column="1"
               Source="{Binding Avatar}" />
        
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Grid.Row="1" 
                    Grid.Column="2" >
            <TextBlock Text="Name:" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="{Binding Name}" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="Gender:" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="{Binding Gender}" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="Age:" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="{Binding Age}"
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="Breed:" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="{Binding Breed}"  
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="Address:" 
                       Style="{StaticResource SubTitleHeaderStyle}" />
            <TextBlock Text="{Binding Address}"  
                       Style="{StaticResource SubTitleHeaderStyle}" />
        </StackPanel>
        <Button x:ConnectionId='2' Style="{StaticResource SendButtonStyle}" 
                Grid.Row="4" 
                Grid.Column="2" 
                                               />

    </Grid>
</Page>

