<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DogBookApp.Styles">
    <Style TargetType="TextBlock" x:Key="LoginPageGreeting">
        <Setter Property="Foreground" Value="GreenYellow" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="CommonTextField">
        <Setter Property="Foreground" Value="GreenYellow" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style TargetType="TextBlock" x:Key="ContentTextFieldStyle">
        <Setter Property="Foreground" Value="GreenYellow" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="FontSize" Value="34" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="10 10 10 0" />
    </Style>
    <Style TargetType="TextBlock" x:Key="SubTitleHeaderStyle">
        <Setter Property="Foreground" Value="GreenYellow" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="FontSize" Value="35" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="PageHeaderStyle">
        <Setter Property="Foreground" Value="GreenYellow" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>

