<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DogBookApp.Styles">
    
    <Style TargetType="PasswordBox" x:Key="CommonPasswordBox">
        <Setter Property="Width" Value="200" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MaxLength" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="10" />
    </Style>
 
    <x:String x:Key="ProfilePageTitle"> Doggy Profile</x:String>
    
    <x:String x:Key="StatusesPageTitle">News Feed</x:String>
    <x:String x:Key="StatusDetailsPageTitle">Inspect Post</x:String>
    
    <x:String x:Key="MainPageTitle">Welcome to DogBook</x:String>

    <x:String x:Key="FriendsPageTitle">My Dog Friends</x:String>

    <x:String x:Key="MessagesPageTitle">Doggy Messages</x:String>
    <x:String x:Key="MessageDetailsPageTitle">Message Preview</x:String>
    <x:String x:Key="NewMessagePageTitle">Send Message</x:String>

    <x:String x:Key="NotificationsPageTitle"> Keep In Touch Alerts </x:String>
</ResourceDictionary>

