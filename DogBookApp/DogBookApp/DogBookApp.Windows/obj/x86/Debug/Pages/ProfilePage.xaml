<Page
    x:Class="DogBookApp.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DogBookApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock" 
               x:Key="ProfileTextBlockField" >
            <Setter Property="FontSize" Value="34" />
        </Style>
        <Style TargetType="TextBox" x:Key="ProfileEditBoxField">
            <Setter Property="FontSize" Value="34" />
            <Setter Property="IsEnabled" Value="False" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Name="ProfileAvatar"
               Grid.Row="1"  
               Grid.Column="1" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch" 
               Source="/Images/blank-avatar.png"/>
        <StackPanel Orientation="Vertical" 
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    HorizontalAlignment="Stretch" >

            <TextBlock Text="Nickname:" 
                       Style="{StaticResource ProfileTextBlockField}"/>
            <TextBox Name="ProfileNicknameInput"
                     PlaceholderText="Nickname" 
                     Style="{StaticResource ProfileEditBoxField}"/>

            <TextBlock Text="Gender:" 
                       Style="{StaticResource ProfileTextBlockField}"/>
            <ListView Name="ProfileGenderSelector"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Visibility="Collapsed">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontSize="30" 
                                   Foreground="LightBlue" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Items>
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </ListView.Items>
            </ListView>
            <TextBox Name="ProfileGenderInput"
                     PlaceholderText="Gender" 
                     Style="{StaticResource ProfileEditBoxField}"   />
            
            <TextBlock Text="Age:" 
                       Style="{StaticResource ProfileTextBlockField}"/>
            <TextBox Name="ProfileAgeInput"
                     PlaceholderText="No Age" 
                     Style="{StaticResource ProfileEditBoxField}"/>

            <TextBlock Text="Breed:" 
                       Style="{StaticResource ProfileTextBlockField}"/>
            <TextBox Name="ProfileBreedInput"
                     PlaceholderText="No Breed" 
                     Style="{StaticResource ProfileEditBoxField}"/>

            <TextBlock Text="Address:" 
                       Style="{StaticResource ProfileTextBlockField}"/>
            <TextBox Name="ProfileAddressInput"
                     PlaceholderText="No Address" 
                     Style="{StaticResource ProfileEditBoxField}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" 
                    Orientation="Vertical"
                    Grid.Column="1"
                    HorizontalAlignment="Center" >
            <Button x:ConnectionId='1' Content="Change Profile Picture"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="30"
                                                    
                    Margin="20, 20, 20, 0"/>
            <Button x:ConnectionId='2' Name="EditProfileButton"
                    Content="Edit Profile"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="30"
                                                   
                    Margin="20, 20, 20, 0"
                    Visibility="Visible"/>
            <Button x:ConnectionId='3' Name="SaveProfileChangesButton"
                    Content="Save Profile"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="30"
                                                          
                    Margin="20, 20, 20, 0"
                    Visibility="Collapsed"/>
        </StackPanel>
        
    </Grid>
</Page>

