<Page
    x:Class="DogBookApp.Pages.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DogBookApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="22*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:ConnectionId='1' x:Name="BackButton"
            Grid.Row="0"
            Grid.Column="1"
                                    
            Style="{StaticResource NavigationBackButtonNormalStyle}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="10"/>
        <TextBlock
            Style="{StaticResource LoginPageGreeting}"
            Text="{StaticResource NotificationsPageTitle}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="34"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"/>
        <ListBox Grid.Row="1" 
                 Grid.Column="1"
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Stretch" 
                 Background="DarkTurquoise" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" >
                        <TextBlock Style="{StaticResource LoginPageGreeting}"
                        Text="{Binding Title}" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="34"/>
                        <TextBlock Style="{StaticResource LoginPageGreeting}"
                        Text="{Binding Content}" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            FontSize="34"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>

